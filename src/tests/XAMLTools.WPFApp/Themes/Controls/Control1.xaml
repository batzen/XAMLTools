<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:controls="clr-namespace:XAMLTools.WPFApp.Controls.MyControl1Namespace">
    <Style x:Key="Control1"
           TargetType="Control">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Control2_Color}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Color x:Key="Control1_Color">#FF2B579A</Color>

    <sys:String x:Key="string1">stringValue</sys:String>
    <Style TargetType="{x:Type controls:MyControl1}" />
</ResourceDictionary>